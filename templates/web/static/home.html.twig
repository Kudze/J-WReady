{% extends 'web/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <div class="container-fluid text-center homeBack">
        <div>
            <h1 class="display-3">Searching for a piece of jewellery?</h1>
            <h3 class="mt-4">J&WReady offers you quality-handcrafted rings, necklaces, watches and more.<br>
                Don't miss out on extraordinary opportunity to purchase our products.</h3>
            <a href="{{ path("catalogue") }}">
                <button type="button" class="btn btn-primary btn-lg mt-4">Explore our catalogue</button>
            </a>
        </div>
    </div>
    <div class="container-fluidtext-center pt-5 pb-5">
        <div class="w-75 text-center mx-auto">
            <h1 class="display-4">Featured product line</h1>
            <hr class="w-75 mt-4 mb-4">

            <div class="row">
            {% if products is empty %}
                <div class="w-100 text-center">
                    <h1 class="text-muted mb-4 mt-5">We didn't find any matches!</h1>
                    <h5 class="text-muted mb-5">Try editing your filters!</h5>
                </div>
            {% else %}
                {% for product in products %}

                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12 my-3 mx-auto">

                        <div class="card w-75">
                            <img class="card-img-top" src="{{ product.image }}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.title }}</h5>
                                <p class="card-text">{{ product.price }}$</p>
                                <a href="{{ path("view_item", {id: product.id}) }}" class="btn btn-primary">View
                                    Item</a>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            {% endif %}
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/home.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/home.js') }}"></script>
{% endblock %}
