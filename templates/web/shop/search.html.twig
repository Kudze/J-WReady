{% extends 'web/base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}

    <div class="container-fluid text-center mt-5 pt-5 pb-5 mb-5">
        <h1 class="display-4 mb-4">Search</h1>
        <hr class="w-75 mt-4">
        {{ form_start(form, {attr: {class: 'form-inline inline-spaced-form justify-content-center'}}) }}

        {{ form_rest(form) }}

        <input type="submit" class="btn btn-primary" value="Search"/>
        {{ form_end(form) }}

        <hr class="w-75 mb-4">

        <div class="row w-75 justify-content-center mx-auto">

            {% if products is empty %}
                <div class="w-100 text-center">
                    <h1 class="text-muted mb-4 mt-5">We didn't find any matches!</h1>
                    <h5 class="text-muted mb-5">Try editing your search query!</h5>
                </div>
            {% else %}
                {% for product in products %}

                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-xs-12 my-3 mx-auto">

                        <div class="card w-75">
                            <img class="card-img-top" src="{{ product.image }}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.title }}</h5>
                                <p class="card-text">{{ product.price }}$</p>
                                <a href="{{ path("view_item", {id: product.id}) }}" class="btn btn-primary">View
                                    Item</a>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            {% endif %}

        </div>

    </div>

{% endblock %}
