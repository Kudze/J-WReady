{% extends 'web/base.html.twig' %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}

    <div class="container-fluid text-center mt-5 pt-5 pb-5 mb-5 w-75">
        <h1 class="display-4 mb-4">Product</h1>
        <hr class="mt-4 mb-4">

        <div class="row">
            <div class="col-3">
                <img class="img-fluid my-auto" src="{{ product.image }}" alt="Card image cap">
            </div>
            <div class="col-9">
                <div class="text-left w-max-1000px mx-auto pr-5">
                    <h2 class="mb-3">{{ product.title }}</h2>
                    <h5 class="text-muted pl-3 pr-3 mb-3">{{ product.description }}</h5>
                    <div class="row">
                        <div class="col-6 text-left">
                            <p>Buy for {{ product.price }}$</p>
                        </div>
                    <div class="col-6 text-right">
                        <p class="text-muted">{{ product.tag.title }}</p>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
